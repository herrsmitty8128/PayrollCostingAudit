{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "format files",
            "type": "shell",
            "command": "autopep8",
            "args":["--in-place", "--max-line-length", "150", "--aggressive", "--aggressive", "app.py", "Element.py", "Employee.py", "Reconciliation.py", "Transaction.py"],
            "group": {
				"kind": "build",
				"isDefault": true
			},
            "presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
        },
        {
            "label": "Run app.py",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args":["app.py"],
            "group": {
				"kind": "build",
				"isDefault": true
			},
            "presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			}
        }
    ]
}